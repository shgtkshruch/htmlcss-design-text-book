extends partials/layout

block title
  title komorikomasha(こもりこましゃ)

block description
  meta(name="description" content="komorikomashaは、コモモ・モリコ・ひろましゃ3人のメンバーが勢いでつくったものや活動を紹介しているサイトです。")

block stylesheet
  // build:css /common/css/vendor.css
  // bower:css
  link(rel='stylesheet', href='../bower_components/normalize-css/normalize.css')
  link(rel='stylesheet', href='../bower_components/bxslider-4/jquery.bxslider.css')
  // endbower
  // endbuild
  link(rel='stylesheet', href='/common/css/style.css')

block pageBody
  section.mainVisual
    ul.bxslider
      - slides = []
      - slides[0] = {heading: ['バッタになりたい魔法使い'], text: ['コモモ・ひろましゃ制作のWeb仕掛け絵本', '合い言葉は、バッタになっちゃえ！'], img: 'mainVisual_img_03.jpg'}
      - slides[1] = {heading: ['WordPress', 'デザインワークブック'], text: ['コモモとひろましゃ二人の共著によるWordPressで本格的なウェブサイトを制作したい方向けの書籍'], img: 'mainVisual_img_02.jpg'}
      - slides[2] = {heading: ['Cafe Debut'], text: ['baserCMS、カフェサイト用テーマ', 'baserCMS2012 テーマコンテスト　飲食店系テーマ賞受賞'], img: 'mainVisual_img_01.jpg'}
      each slide, i in slides
        li
          .mainVisualText
            h1
              each text, j in slide.heading
                = text
                br
            p
              each text, k in slide.text
                = text
                br
          img(src="images/#{slide.img}" alt="" width="980" height="500")

  section.portfolioIndex
    - works = []
    - works[0] = {link: '03.html', img: 'index_03.jpg', heading: 'バッタになりたい魔法使い', text: ['コモモ・ひろましゃ制作のWeb仕掛け絵本', '合い言葉は、バッタになっちゃえ！']}
    - works[1] = {link: '02.html', img: 'index_02.jpg', heading: 'WordPressデザインワークブック', text: ['コモモとひろましゃ二人の共著によるWordPressで本格的なウェブサイトを制作したい方向けの書籍']}
    - works[2] = {link: '01.html', img: 'index_01.jpg', heading: 'Cafe Debut', text: ['baserCMSのカフェサイト用汎用テーマ', 'テーマコンテスト2012飲食店系テーマ賞受賞']}
      each work, i in works
        article
          a(href="portfolio/#{work.link}")
            img(src="portfolio/images/#{work.img}" alt="" width="300" height="163")
          h2
            a(href="portfolio/#{work.link}")= work.heading
          p
            each text, j in work.text
              = text
              br

  section.news
    h1 お知らせ
    table
      - news = []
      - news[0] = {datetime: '2013-10-01', date: '2013年10月1日', text: 'コモモとモリコで、書籍「HTML/CSSの教科書（仮題）」を執筆中です。お楽しみに。'}
      - news[1] = {datetime: '2013-10-01', date: '2013年10月1日', text: 'コモモ・モリコ・ひろましゃ3人のサイト「komorikomasha」をオープンしました。 3人で制作したウェブサイトやサービス、その他諸々の活動を紹介・お知らせしていく予定です。どうぞよろしくお願いいたします。'}
      each nw, i in news
        tr
          th
            time(datetime="#{nw.datetime}")= nw.date
          td= nw.text

block script
  // build:js /common/js/vendor.js
  script(src="../bower_components/jquery/dist/jquery.min.js")
  script(src="../bower_components/bxslider-4/jquery.bxslider.min.js")
  // endbuild
  script.
    $('.bxslider').bxSlider({
      auto: true,
      speed: 1000,
      pause: 4000,
    });
